<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="dev.soaptree.local.weather.util.Utils"/>
        <variable
            name="weather"
            type="dev.soaptree.local.weather.Weather" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@{weather.title}"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/weatherview_today"
            app:layout_constraintTop_toTopOf="parent" />

        <dev.soaptree.local.weather.view.WeatherView
            android:id="@+id/weatherview_today"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:stateName="@{weather.todayWeather.weatherStateName}"
            app:stateAbbr="@{weather.todayWeather.weatherStateAbbr}"
            app:temp="@{Utils.temperatureWithSymbol(context, weather.todayWeather.currentTemp)}"
            app:humidity="@{Utils.humidityWithSymbol(context, weather.todayWeather.humidity)}"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintBottom_toBottomOf="@id/textview_title"
            app:layout_constraintLeft_toRightOf="@id/textview_title"
            app:layout_constraintRight_toLeftOf="@id/weatherview_tomorrow"
            app:layout_constraintTop_toTopOf="@id/textview_title" />

        <dev.soaptree.local.weather.view.WeatherView
            android:id="@+id/weatherview_tomorrow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:stateName="@{weather.tomorrowWeather.weatherStateName}"
            app:stateAbbr="@{weather.tomorrowWeather.weatherStateAbbr}"
            app:temp="@{Utils.temperatureWithSymbol(context, weather.tomorrowWeather.currentTemp)}"
            app:humidity="@{Utils.humidityWithSymbol(context, weather.tomorrowWeather.humidity)}"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintBottom_toBottomOf="@id/textview_title"
            app:layout_constraintLeft_toRightOf="@id/weatherview_today"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>