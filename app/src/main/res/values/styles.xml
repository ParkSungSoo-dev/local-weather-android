<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="WeatherListTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/weather_list_title_font_size</item>
        <item name="fontFamily"></item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherStateName" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/weather_list_title_font_size</item>
        <item name="fontFamily"></item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherTemp" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/weather_list_title_font_size</item>
        <item name="fontFamily"></item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherHumidity" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/weather_list_title_font_size</item>
        <item name="fontFamily"></item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
